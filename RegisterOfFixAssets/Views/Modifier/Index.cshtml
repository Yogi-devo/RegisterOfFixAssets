@model RegisterOfFixAssets.Models.AssetsP
@{

    ViewBag.Title = "Index";
}

@using (Ajax.BeginForm("Index", "Modifier", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divupdate" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default" style="width:500px;margin-left:auto;margin-right:auto">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Choose Item:</h5>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.item_ID, new SelectList(ViewBag.assets, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">

                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div id="divupdate">
            @{
                Html.RenderPartial("Itemlist", Model);
            }
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

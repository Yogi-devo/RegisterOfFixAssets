@model IEnumerable<RegisterOfFixAssets.Models.AssetsP>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

<p>
 <button class="btn btn-success"><i class="fa fa-plus"> @Html.ActionLink("Add new Item", "Create", routeValues:null, htmlAttributes:new {style="text-decoration:none; color:white" })</i></button>
</p>
<table class="table table-striped table-bordered" id="print">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Item Name")
            </th>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.item_name)
            </td>
            @if (item.category == 1)
    {
        <td>
            Recognizable
        </td>
}
else
{
        <td>
            Non-Recognizable
        </td>
}
            @if (item.status == 0)
    {
        <td>
            Inactive
        </td>
}
else
{
        <td>
            Active
        </td>
}


            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.item_ID }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.item_ID }) |*@
                @*@Html.ActionLink("Delete", "Delete", new { id=item.item_ID })*@
            </td>
        </tr>
}
    </tbody>
</table>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" />
@*<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" />*@
@section scripts{
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    @*<script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
        <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.print.min.js"></script>*@
    <script>

        $(document).ready(function () {
            
            $('#print').DataTable({
                dom: 'Bfrtip',
                buttons: [{
                    extend: 'print',
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4, 5, 6],
                    }
                }]

            });
        });
    </script>
}

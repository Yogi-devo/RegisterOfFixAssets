                                    $(function () {
                                        $("#Itemcount").show();
                                        $("#Model_SlNo").show();
                                        if ($("#CategoryId option:selected").val() == 1) {
                                            $("#Itemcount").hide();
                                            $("#labelitemcount").hide();
                                            $("#Model_SlNo").show();
                                            $("#labelmodelno").show();
                                        }
                                        else if ($("#CategoryId option:selected").val() == 2) {
                                            $("#Model_SlNo").hide();
                                            $("#labelmodelno").hide();
                                            $("#Itemcount").show();
                                            $("#labelitemcount").show();
                                        }
                                        else {
                                            $("#Model_SlNo").show();
                                            $("#Itemcount").show();
                                            $("#labelitemcount").show();
                                            $("#Itemcount").show();
                                        }
                                        if ($("#AssetId option").length > 1) {


                                            $("#AssetId").removeAttr("disabled");
                                        }
                                    });

